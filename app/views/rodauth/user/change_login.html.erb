<%= form_with url: rodauth(:user).change_login_path, method: :post, data: { turbo: false } do |form| %>
  <div class="form-group mb-3">
    <%= form.label "login", rodauth(:user).login_label, class: "form-label" %>
    <%= form.email_field rodauth(:user).login_param, value: params[rodauth(:user).login_param], id: "login", autocomplete: "email", required: true, class: "form-control #{"is-invalid" if rodauth(:user).field_error(rodauth(:user).login_param)}", aria: ({ invalid: true, describedby: "login_error_message" } if rodauth(:user).field_error(rodauth(:user).login_param)) %>
    <%= content_tag(:span, rodauth(:user).field_error(rodauth(:user).login_param), class: "invalid-feedback", id: "login_error_message") if rodauth(:user).field_error(rodauth(:user).login_param) %>
  </div>

  <% if rodauth(:user).require_login_confirmation? %>
    <div class="form-group mb-3">
      <%= form.label "login-confirm", rodauth(:user).login_confirm_label, class: "form-label" %>
      <%= form.email_field rodauth(:user).login_confirm_param, value: params[rodauth(:user).login_confirm_param], id: "login-confirm", autocomplete: "email", required: true, class: "form-control #{"is-invalid" if rodauth(:user).field_error(rodauth(:user).login_confirm_param)}", aria: ({ invalid: true, describedby: "login-confirm_error_message" } if rodauth(:user).field_error(rodauth(:user).login_confirm_param)) %>
      <%= content_tag(:span, rodauth(:user).field_error(rodauth(:user).login_confirm_param), class: "invalid-feedback", id: "login-confirm_error_message") if rodauth(:user).field_error(rodauth(:user).login_confirm_param) %>
    </div>
  <% end %>

  <% if rodauth(:user).change_login_requires_password? %>
    <div class="form-group mb-3">
      <%= form.label "password", rodauth(:user).password_label, class: "form-label" %>
      <%= form.password_field rodauth(:user).password_param, value: "", id: "password", autocomplete: rodauth(:user).password_field_autocomplete_value, required: true, class: "form-control #{"is-invalid" if rodauth(:user).field_error(rodauth(:user).password_param)}", aria: ({ invalid: true, describedby: "password_error_message" } if rodauth(:user).field_error(rodauth(:user).password_param)) %>
      <%= content_tag(:span, rodauth(:user).field_error(rodauth(:user).password_param), class: "invalid-feedback", id: "password_error_message") if rodauth(:user).field_error(rodauth(:user).password_param) %>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.submit rodauth(:user).change_login_button, class: "btn btn-lg btn-primary w-100 fs-6" %>
  </div>
<% end %>
