<%= form_with url: onboarding_path, method: :post do |form| %>
  <div class="form-group mb-3">
    <%= form.label "name", 'Name', class: "form-label" %>
    <%= form.text_field :name, value: '', id: "name", required: true, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
