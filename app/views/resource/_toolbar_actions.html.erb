<%
  # locals: {
  #   resource: "the resource to generate actions for",
  #   actions: "list of actions to generate",
  # }
%>

<% actions.values.each do |action| %>
  <% if action.button.is_a? Pu::UI::Button %>
    <%=
      toolbar_icon_button adapt_route_args(resource, action: action.route.action),
                          icon: action.button.icon,
                          button_class: action.button.button_class,
                          method: action.route.method,
                          confirm: action.confirm
    %>
  <% end %>
<% end %>
