<%#
  locals: {
    form: "instance of Pu::Builders::Form"
  }
%>
<%= simple_form_for form.record do |f| %>
  <div class="row py-2">
    <div class="col-12 text-end">
      <%= f.button :submit, class: "btn btn-sm btn-outline-primary" %>
    </div>
  </div>

  <div class="row row-gap-2">
    <div class="container">
      <div class="form-errors">
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      </div>
    </div>

    <div class="form-inputs">
      <% form.inputs.each do |name, options| %>
        <%= f.input name, **options %>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-outline-primary" %>
    </div>
  </div>
<% end %>
