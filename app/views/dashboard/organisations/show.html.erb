<% content_for :toolbar do  %>
  <%= render partial: 'toolbar', locals: { resource_class: Organisation,
                                           resource: @organisation, actions:
                                           'toolbar_actions_single' } %>
<% end  %>

<% content_for :tab_content do %>
  <turbo-frame id="<%= dom_id @organisation %>" data-turbo-action="advance">
    <%= render @organisation %>
  </turbo-frame>
<% end %>

<% content_for :tab_menu do %>
    <%= render 'tab_menu', resource: @organisation %>
<% end %>
