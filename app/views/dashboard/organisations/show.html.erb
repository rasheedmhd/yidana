<% content_for :toolbar do  %>
  <%= render 'toolbar', resource_class: Organisation, resource: @organisation do %>
    <%=
      render partial: 'toolbar_actions', locals: {
        actions: @details.actions.permitted_actions_for(policy(@organisation)),
        resource: @organisation
      }
    %>
  <% end %>
<% end  %>

<% content_for :tab_content do %>
  <%= render @details %>
<% end %>

<% content_for :tab_menu do %>
    <%= render 'tab_menu', resource: @organisation %>
<% end %>
