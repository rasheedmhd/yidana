<%= simple_form_for organisation do |f| %>
  <div class="row py-2">
    <div class="col-12 text-end">
      <%= f.button :submit, class: "btn btn-sm btn-outline-primary" %>
    </div>
  </div>

  <div class="row row-gap-2">
    <div class="container">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    </div>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :headline %>
      <%= f.input :description %>
      <%= f.input :website_url %>
      <%= f.input :company_type, collection: CompanyType.collection, as: :radio_buttons %>
      <%= f.input :company_size, collection: CompanySize.collection, as: :radio_buttons %>
      <%= f.input :industry, collection: Industry.collection, as: :check_boxes, wrapper: :vertical_collection_inline %>
      <%= f.input :country, collection: Country.collection %>
      <%#= f.input :benefits %>
      <%= f.input :joel_test, collection: JoelTest.collection, as: :check_boxes %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-outline-primary" %>
    </div>
  </div>
<% end %>
