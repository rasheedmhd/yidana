<div class="container-fluid">
  <%= render 'toolbar' %>

  <div class="row">
    <div class="col-12 table-responsive max-vh-75">
      <table class="table table-hover table-striped my-0">
        <thead class="sticky-top">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Headline</th>
            <th scope="col">Industry</th>
            <th scope="col">Country</th>
            <th scope="col">Created</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @resources.each do |resource| %>
          <tr>
            <th scope="row"><%= resource.id %></th>
            <td style="max-width: 250px"><%= resource.name %></td>
            <td class="text-truncate" style="max-width: 250px" <%= tooltip resource.headline %> >
              <%= resource.headline %>
            </td>
            <td style="max-width: 250px"><%= display_name_of resource.industry %></td>
            <td style="max-width: 250px"><%= display_name_of resource.country %></td>
            <td style="max-width: 250px"><%= timeago resource.created_at %></td>
            <td style="max-width: 250px">
              <%= link_to organisation_path(resource), class: 'd-inline-block ms-2 text-primary' do %>
                <i class="bi bi-box-arrow-up-right"></i>
              <% end %>

              <%= link_to edit_organisation_path(resource), class: 'd-inline-block ms-2 text-secondary' do %>
                <i class="bi bi-pencil"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-12">
      <%= pagination @pagy %>
    </div>
  </div>
</div>
