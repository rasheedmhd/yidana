<% content_for :toolbar do %>
  <%= render 'toolbar', resource_class: Organisation do %>
    <%=
      render partial: 'toolbar_search_input', locals: {
        search_object: @table.search_object,
        search_field: @table.search_field
      }
    %>

    <%=
      render partial: 'toolbar_actions', locals: {
        actions: @table.toolbar_actions.permitted_actions_for(policy(Organisation)),
        resource: Organisation
      }
    %>
  <% end %>
<% end  %>

<%= render 'table', table: @table %>
